<h2>Edit: <%= @course.name %></h2>

<form method="POST" action="/courses/<%= @course.slug %>">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="name">Course Name:</label>
    <input type="text" name="course[name]" placeholder="Enter Course Name Here" required><br>

    <label for="description">Description:</label>
    <input type="text" name="course[description]" placeholder="Enter Description Here" required><br>

    <label for="capacity">Capacity:</label>
    <input type="number" name="course[capacity]" placeholder="Enter Capacity Here" required><br>

    <label for="password">Location:</label>
    <input type="text" name="course[location]" placeholder="Enter Location Here" required><br>

    <input type="submit" value="Save">

</form>
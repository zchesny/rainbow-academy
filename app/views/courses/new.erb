<h2>Create a New Course</h2>

<% unless locals.empty? %>
    <p class="message"><%= message%></p>
    <br>
<% end %>

<form method="POST" action="/courses">

    <label for="name">Course Name:</label>
    <input type="text" name="name" placeholder="Enter Course Name Here" required><br>

    <label for="description">Description:</label>
    <input type="text" name="description" placeholder="Enter Description Here" required><br>

    <label for="capacity">Capacity:</label>
    <input type="number" name="capacity" placeholder="Enter Capacity Here" required><br>

    <label for="location">Location:</label>
    <input type="text" name="location" placeholder="Enter Location Here" required><br>

    <label for="schedule_days">Schedule:</label>
    <% ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"].each do |day| %>
        <input type="checkbox" name="schedule_days[]" id="<%= day %>" value="<%= day %>"><%= day %>
    <% end %><br>

    <label for="military_start_time">Start Time:</label>
    <input type="time" name="military_start_time" required>

    <label for="duration">Duration:</label>
    <select id="duration" name="duration" required>
        <option value="60">1 hr</option>
        <option value="30">30 min</option>
        <option value="90">1 hr 30 min</option>
        <option value="120">2 hr</option>
    </select>

    <br>
    <input type="submit" value="Create Course">

</form>